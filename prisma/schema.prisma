generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String   @unique
  password     String
  mobile       String?
  gender       String?
  created_at   DateTime @default(now())
  updated_at   DateTime? @updatedAt
}

model Todo {
  id           Int      @id @default(autoincrement())
  user_id      String
  todo         String
  description  String?
  created_at   DateTime @default(now())
  updated_at   DateTime? @updatedAt

  @@unique([user_id, todo]) // Composite unique constraint
}